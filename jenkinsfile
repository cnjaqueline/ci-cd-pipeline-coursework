pipeline {
    agent any

    stages {
        // stage('Input') {
        //     steps {
        //         script {
        //             def userInput = input(message: 'Continuar com o deploy?', parameters: [booleanParam(defaultValue: true, description: 'Prosseguir?', name: 'PROCEED')])
        //             if (!userInput) {
        //                 error("Deploy cancelado pelo usuário.")
        //             }
        //         }
        //     }
        // }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'npm run deploy'
            }
        }

        stage('Matrix Build') {
            matrix {
                axes {
                    axis {
                        name 'NODE_VERSION'
                        values '14', '16', '18'
                    }
                }
                stages {
                    stage('Test on NodeJS') {
                        steps {
                            // sh 'nvm use $NODE_VERSION'
                            // sh 'npm test'
                            echo "Do Test for ${NODE_VERSION}"
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
        success {
            echo 'Pipeline concluído com sucesso!'
        }
        failure {
            echo 'Pipeline falhou.'
        }
    }
}
